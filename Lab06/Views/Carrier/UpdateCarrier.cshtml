@model Lab6.Models.Carrier

@{
    ViewBag.Title = "UpdateCarrier";
}

<h2>Update Carrier's data</h2>

<form method="post" action="">
    <input type="hidden" value="@Model.id" name="id" />
    <div class="form-group">
        <label for="name"></label>
        <input type="text" class="form-control" name="name" id="id" placeholder="Please insert name" value="@Model.name">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

